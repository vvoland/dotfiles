#!/usr/bin/env bash

set -e

STEP=1
AMIXER="amixer"
DEVICE="PCM"

[ -z "$1" ] && echo "usage: platfom-volume [up/down/toggle_mute]" && exit 1

case "$1" in
    "up")
    "$AMIXER" set "$DEVICE" "${STEP}%+"
    ;;
    "down")
    "$AMIXER" set "$DEVICE" "${STEP}%-"
    ;;
    "toggle_mute")
    "$AMIXER" set "$DEVICE" toggle
esac
