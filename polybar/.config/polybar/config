[bar/main]
monitor = LVDS-1
width = 100%
height = 24
bottom = true
fixed-center = false
line-size = 2

background = ${color.bar-background}
foreground = ${color.foreground}

border-size = 3
border-color = ${color.bar-background}

module-margin-left = 1
module-margin-right = 1

font-0 = "Ubuntu Mono:pixelsize=10;2"
font-1 = "Material Icons:size=11;4"
font-2 = "FontAwesome:pixelsize=10;2"

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right
tray-padding = 1
tray-reparent = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

modules-left = workspaces 
modules-right = volume filesystem memory cpu temperature battery date time


[bar/secondary]
