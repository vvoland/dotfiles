;== Modules ========================================================

[module/workspaces]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
index-sort = false
enable-click = true
enable-scroll = true
wrapping-scroll = false
reverse-scroll = true
fuzzy-match = false

ws-icon-0 = "1; "
ws-icon-1 = "0; "
ws-icon-2 = "9; "
ws-icon-3 = "7; "
ws-icon-4 = "4; "
ws-icon-5 = "8; "
format = <label-state><label-mode>

label-mode = %mode%
label-mode-padding = 1
label-mode-background = #e60053

label-focused = %icon%%name%
label-focused-foreground = ${color.foreground}
label-focused-background = ${color.bar-widget-background}
label-focused-underline = ${color.underline}
label-focused-padding = 1

label-visible = %icon%%name%
label-visible-foreground = ${color.foreground}
label-visible-background = ${color.bar-widget-background}
label-visible-underline = ${color.grey}
label-visible-padding = 1

label-unfocused = %icon%%name%
label-unfocused-padding = 1

label-urgent-foreground = ${color.red}
label-urgent-underline = ${color.red}
label-urgent-padding = 1


[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input
format-prefix = " "
format-underline = ${color.underline}
format-warn-underline = ${color.underline-error}
interval = 3

[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /
interval = 10
fixed-values = true
format-mounted= " <label-mounted>"
format-mounted-underline = ${color.underline}
label-mounted = %free%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${color.foreground}
format-underline = ${color.underline}
label = %percentage%%

[module/memory]
